<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/site_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:paddingTop="2dp"
        android:padding="16dp"
        android:scrollbars="vertical">
        <TextView
            android:id="@+id/site_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="18sp"
            android:textColor="@color/daily_question_question_color"/>
        <TextView
            android:id="@+id/site_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/site_detail_title"
            android:text="content"
            android:textSize="14sp"
            android:textColor="@color/text_color_gray"/>

        <Button
            android:id="@+id/site_detail_button"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/site_detail_content"
            android:gravity="center"
            android:background="@drawable/pink_white_roundedbtn"
            android:text="前往網站"
            android:textColor="@color/background_pink"
            android:textSize="15sp"/>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
